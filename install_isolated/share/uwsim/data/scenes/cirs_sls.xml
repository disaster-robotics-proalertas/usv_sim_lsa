    </PressureSensorToROS>
    <GPSSensorToROS>
      <name>GPSSensor</name>
      <topic>g500/gps</topic>
      <rate>1</rate>
    </GPSSensorToROS>
    <DVLSensorToROS>
      <name>DVLSensor</name>
      <topic>g500/dvl</topic>
      <rate>5</rate>
    </DVLSensorToROS>
    <RangeImageSensorToROSImage> 
      <cameraName>rangeImage</cameraName>
