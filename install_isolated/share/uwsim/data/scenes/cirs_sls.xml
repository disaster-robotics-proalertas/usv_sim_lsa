<?xml version="1.0"?>

<!DOCTYPE UWSimScene SYSTEM "UWSimScene.dtd" >

<UWSimScene>
  <oceanState>
    <windx> 0.04 </windx>
    <windy> 0.04 </windy>
    <windSpeed> 12 </windSpeed>
    <depth> 1000 </depth>
    <reflectionDamping> 0.35 </reflectionDamping>
    <waveScale> 1e-7 </waveScale>
    <isNotChoppy> 0 </isNotChoppy>
    <choppyFactor> 2.5 </choppyFactor>
    <crestFoamHeight> 2.2 </crestFoamHeight>
    <oceanSurfaceHeight> 0 </oceanSurfaceHeight>
    <fog>
      <density> 0.1</density>
      <color>
  <r>0</r>
  <g>0.05</g>
  <b>0.3</b>
      </color>
    </fog>
    <color>
      <r>0.0</r>
      <g>0.05</g>
      <b>0.3</b>
    </color>
    <attenuation>
      <r>0.015</r>
      <g>0.0075 </g>
      <b> 0.005 </b>
    </attenuation>
  </oceanState>
  <simParams>
    <disableShaders> 0 </disableShaders>
    <resw> 800 </resw>
    <resh> 600 </resh>
    <offsetp>
      <x>0</x>
      <y>0</y>
      <z>0</z>
    </offsetp>
    <offsetr>
      <x> 3.14</x>
      <y> 0</y>
      <z> -1.57 </z>
    </offsetr>
    <enablePhysics> 1 </enablePhysics>
    <showTrajectory>
      <target>girona500</target>
    </showTrajectory>
  </simParams>
  <camera>
    <freeMotion> 1 </freeMotion>
    <objectToTrack>girona500/base_link</objectToTrack>
    <fov> 60 </fov>
    <aspectRatio> 1.33 </aspectRatio>
    <near> 1 </near>
    <far> 10000 </far>
    <position>
      <x>-5</x>
      <y>-5 </y>
      <z> 9 </z> <!-- -5 -5 8 -->
    </position> 
    <lookAt>
      <x>0</x>
      <y>0 </y>
      <z>0 </z>
    </lookAt>
  </camera>

  <vehicle>
    <name>girona500</name>
    <file>data/scenes/g500ARM5_laser.urdf</file>
    <jointValues>
      <joint> 0 </joint>
      <joint> 0</joint>
      <joint> 2.2 </joint>
      <joint> 0 </joint>
      <joint>0.3 </joint>
    </jointValues>
    <position>
      <x> 0.2</x>
      <y> 0.2 </y>
      <z> 2.0 </z>
    </position>
    <orientation>
      <r>0</r>
      <p>0</p>
      <y>0</y>
    </orientation>
    <virtualCamera>
      <name>stereo_down_left</name>
      <relativeTo>stereo_down_optical</relativeTo>
      <resw>1024</resw>
      <resh>768</resh>
      <position>
        <x>0</x>
        <y>0</y>
        <z>0</z>
      </position>  
      <orientation>
        <r>0</r>
        <p>3.14</p>
        <y>3.14</y>
      </orientation>
      <baseline> 0.0 </baseline>
      <frameId> stereo_down </frameId>
      <parameters>
        <fx>681.186</fx>
        <fy>681.186</fy>
        <x0>512</x0>
        <y0>384</y0>
        <f>100.0</f>
        <n>0.05</n>
        <k>0.0</k>
      </parameters>
    </virtualCamera>
    <virtualCamera>
      <name>stereo_down_right</name>
      <relativeTo>stereo_down_optical</relativeTo>
      <resw>1024</resw>
      <resh>768</resh>
      <position>
        <x>0.12</x>
        <y>0</y>
        <z>0</z>
      </position>  
      <orientation>
        <r>0</r>
        <p>3.14</p>
        <y>3.14</y>
      </orientation>
      <baseline> 0.12 </baseline>
      <frameId> stereo_down </frameId>
      <parameters>
        <fx>681.186</fx>
        <fy>681.186</fy>
        <x0>512</x0>
        <y0>384</y0>
        <f>100.0</f>
        <n>0.05</n>
        <k>0.0</k>
      </parameters>
    </virtualCamera>

    <structuredLightProjector>
      <name>laser_projector</name>
      <relativeTo>sls</relativeTo>
      <fov>21</fov>
      <image_name>data/textures/laser_lines.png</image_name>
      <laser>1</laser>
      <position>
        <x>0</x>
        <y>0</y>
        <z>0</z>
      </position>  
      <orientation>
        <r>0</r>
        <p>3.14</p>
        <y>1.57</y> 
      </orientation>
    </structuredLightProjector>
    <rangeSensor>
      <name>sonar</name>
      <relativeTo>part0</relativeTo>
      <range>10</range>
      <visible>0</visible>
      <position>
        <x>-0.3</x>
        <y>0</y>
        <z>0</z>
      </position>  
      <orientation>
        <r>0</r>
        <p>1.57</p>
        <y>0</y>
      </orientation>
    </rangeSensor>

    <imu>
      <name>imu</name>
      <relativeTo>base_link</relativeTo>
      <position>
        <x>0</x>
        <y>0</y>
        <z>0</z>
      </position>  
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>3.1415</y>
      </orientation>
      <std>0.00000001</std>
    </imu>

    <pressureSensor>
      <name>pressureSensor</name>
      <relativeTo>base_link</relativeTo>
      <position>
        <x>0</x>
        <y>0</y>
        <z>0.2</z>
      </position>  
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>0</y>
      </orientation>
      <std>0.02</std>
    </pressureSensor>
    
    <gpsSensor>
      <name>GPSSensor</name>
      <relativeTo>base_link</relativeTo>
      <position>
        <x>0</x>
        <y>0</y>
        <z>0</z>
      </position>  
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>0</y>
      </orientation>
      <std>0.00005</std>
    </gpsSensor>

    <dvlSensor>
      <name>DVLSensor</name>
      <relativeTo>base_link</relativeTo>
      <position>
        <x>-0.75</x>
        <y>0</y>
        <z>0</z>
      </position>  
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>3.9269908169872414</y>
      </orientation>
      <std>0.0015</std>
    </dvlSensor>

    <virtualRangeImage>
      <name>rangeImage</name>
      <relativeTo>part0</relativeTo>
      <resw> 320</resw>
      <resh> 240 </resh>
      <position>
        <x>-0.2</x>
        <y> 0.1 </y>
        <z> 0 </z>
      </position>  
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>1.57 </y>
      </orientation>
      <parameters>
        <fx>257.986</fx>
        <fy>257.341</fy>
        <x0>120</x0>
        <y0>160</y0>
        <f>10</f>
        <n>0.8</n>
        <k>0</k>
      </parameters>

    </virtualRangeImage>

    <multibeamSensor>
      <name>multibeam</name>
      <relativeTo>part0</relativeTo>
      <position>
        <x>-0.2</x>
        <y> 0.1 </y>
        <z> 0 </z>
      </position>  
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>3.14 </y>
      </orientation>
      <initAngle>-60</initAngle>
      <finalAngle>60</finalAngle>
      <angleIncr>0.1</angleIncr>
      <range>10</range>
    </multibeamSensor>

    <simulatedDevices>
      <echo>
        <name>g500_echo1</name>
        <info>Echo example 1</info>
      </echo>
    </simulatedDevices>
    <echo>
      <name>g500_echo2</name>
      <info>Echo example 2</info>
    </echo>

    <ForceSensor>
      <name>ForceG500</name>
      <target>base_link</target>
      <offsetp>
        <x>-0.2</x>
        <y>0.75</y>
        <z>0</z>
      </offsetp>
      <offsetr>
        <x>-1.57</x>
        <y>0</y>
        <z>3.14</z>
      </offsetr>
    </ForceSensor>
  </vehicle>

  <object>
    <name>terrain</name>
    <file>terrain/CIRS/cirs_trident.osg</file>
    <position>
      <x> 0</x>
      <y> 0 </y>
      <z> 0 </z>
    </position>
    <orientation>
      <r>0</r>
      <p>0</p>
      <y>0</y>
    </orientation>
    <offsetp>
      <x>-1.5</x>
